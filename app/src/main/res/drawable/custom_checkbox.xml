<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/custom_checkbox_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked state -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Initial background color -->
            <corners android:radius="40dp" /> <!-- Adjust corner radius based on your design -->
            <stroke android:color="#CCCCCC" android:width="1dp" /> <!-- Border color and width -->
        </shape>
    </item>
    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#3498DB" /> <!-- Background color when checked -->
            <corners android:radius="40dp" /> <!-- Adjust corner radius based on your design -->
            <stroke android:color="#3498DB" android:width="1dp" /> <!-- Border color and width when checked -->
        </shape>
    </item>
</selector>
